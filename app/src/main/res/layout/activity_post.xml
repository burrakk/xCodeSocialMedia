<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register"
    tools:context=".PostActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/update_postpage_toolbar"
        layout="@layout/bar_layout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="Yeni Gönderi" />
    <View
        android:layout_below="@+id/update_postpage_toolbar"
        android:background="@drawable/login"
        android:layout_width="match_parent"
        android:layout_height="2dp" />

    <ImageButton
        android:id="@+id/select_post_image"
        android:layout_below="@+id/update_postpage_toolbar"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="15dp"
        android:scaleType="fitCenter"
        android:background="@drawable/button"
        android:backgroundTint="@color/white"
        app:srcCompat="@drawable/select_image" />

    <EditText
        android:id="@+id/post_text"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@+id/select_post_image"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/postshape"
        android:drawableLeft="@drawable/post_leftdw"
        android:hint="Gönderiniz Hakkında Yazın..."
        android:inputType="textMultiLine"
        android:textColorHint="@color/secondarcolor" />

    <Button
        android:id="@+id/update_post_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/post_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="75dp"
        android:textStyle="bold"
        android:background="@drawable/button"
        android:text="Paylaş"
        android:textSize="20sp"/>

</RelativeLayout>