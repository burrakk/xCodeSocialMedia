<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    tools:context=".PostDetailsonClick">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/edit_page_toolbar"
        layout="@layout/bar_layout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="Gönderi Detayları" />

    <View
        android:layout_below="@+id/edit_page_toolbar"
        android:background="@drawable/login"
        android:layout_width="match_parent"
        android:layout_height="2dp" />

    <ImageView
        android:id="@+id/edit_post_image"
        android:background="@drawable/inputs"
        android:layout_width="match_parent"
        android:layout_below="@id/edit_page_toolbar"
        android:layout_height="400dp"
        android:layout_margin="10dp"
        app:srcCompat="@drawable/select_image" />

    <TextView
        android:id="@+id/edit_post_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        android:textSize="16sp"
        android:padding="7dp"
        android:background="@drawable/postshape"
        android:layout_below="@+id/edit_post_image"
        android:textAlignment="textStart"
        android:text="Gönderi Açıklaması..." />

    <Button
        android:id="@+id/delete_post_bttn"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_post_description"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:background="@drawable/button"
        android:drawableLeft="@android:drawable/ic_menu_close_clear_cancel"
        android:text="Gönderiyi Sil" />

    <Button
        android:id="@+id/edit_post_bttn"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_post_description"
        android:layout_alignParentRight="true"
        android:layout_marginTop="50dp"
        android:layout_marginRight="15dp"
        android:textStyle="bold"
        android:background="@drawable/button"
        android:drawableLeft="@android:drawable/arrow_up_float"
        android:text="Güncelle" />
</RelativeLayout>