<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:background="@drawable/postshape">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/all_users_pp"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_margin="10dp"
        android:src="@drawable/profile"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/secondarcolor">
    </de.hdodenhof.circleimageview.CircleImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/all_users_fullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Full Name"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:textStyle="bold">
        </TextView>

        <TextView
            android:id="@+id/all_users_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Status"
            android:textColor="@color/black"
            android:textSize="13sp">
        </TextView>
        <TextView
            android:id="@+id/all_users_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Şehir , İlçe"
            android:textColor="@color/black"
            android:textSize="13sp">
        </TextView>


    </LinearLayout>

</LinearLayout>